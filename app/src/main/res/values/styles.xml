<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="textLabel">
        <item name="android:layout_margin">@dimen/list_item_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textValue">
        <item name="android:layout_margin">@dimen/list_item_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="currencyTag">
        <item name="android:layout_margin">@dimen/list_item_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/tag_currency_rounded</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:elevation">@dimen/tag_elevation</item>
    </style>

    <style name="textSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textInLinearLayoutSettings">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="headingSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/settingsLabel</item>
    </style>

    <style name="settingsLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:weightSum">5</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="expandedappbar" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">100sp</item>
    </style>

    <style name="collapsedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">0sp</item>
        <item name="android:textColor">#FFF</item>
    </style>
</resources>
