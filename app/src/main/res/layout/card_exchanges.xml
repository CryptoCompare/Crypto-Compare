<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/card_margin"
    android:elevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/card_album_radius">

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/buy_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/line_margin"
            android:orientation="horizontal"
            android:weightSum="4">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/textLabel"
                    android:textColor="@color/colorLabel"
                    android:text="Buy"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0px"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/buy_value"
                    style="@style/textLabel"
                    android:textColor="@color/buyLabel"
                    android:text="2533.35"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_upward_black_24dp"/>
                <TextView
                    android:gravity="bottom"
                    android:textColor="@color/buyLabel"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="(10.56)"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sell_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/line_margin"
            android:orientation="horizontal"
            android:weightSum="4">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/textLabel"
                    android:textColor="@color/colorLabel"
                    android:text="Sell"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0px"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sell_value"
                    style="@style/textLabel"
                    android:text="2691.56"
                    android:textColor="@color/sellLabel"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_downward_black_24dp"/>
                <TextView
                    android:gravity="bottom"
                    android:textColor="@color/sellLabel"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="(10.56)"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="7"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/exchange_name"
                    style="@style/textLabel"
                    android:text="Fyb-SG"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="3"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/currency_name"
                    style="@style/currencyTag"
                    android:text="SGD"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
